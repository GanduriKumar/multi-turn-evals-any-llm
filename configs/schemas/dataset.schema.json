{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/dataset.schema.json",
  "title": "Conversation Dataset",
  "type": "object",
  "required": ["dataset_id", "version", "metadata", "conversations"],
  "properties": {
    "dataset_id": {"type": "string"},
    "version": {"type": "string"},
    "metadata": {
      "type": "object",
      "required": ["domain", "difficulty"],
      "properties": {
        "domain": {"type": "string", "enum": ["commerce", "banking"]},
        "difficulty": {"type": "string", "enum": ["easy", "medium", "hard"]},
        "tags": {"type": "array", "items": {"type": "string"}},
        "task_type": {"type": "string"}
      }
    },
    "conversations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["conversation_id", "turns"],
        "properties": {
          "conversation_id": {"type": "string"},
          "turns": {
            "type": "array",
            "minItems": 2,
            "items": {
              "type": "object",
              "required": ["role", "text"],
              "properties": {
                "role": {"type": "string", "enum": ["user", "assistant"]},
                "text": {"type": "string"}
              }
            }
          }
        }
      }
    }
  }
}
