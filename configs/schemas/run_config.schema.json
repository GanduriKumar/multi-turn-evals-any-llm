{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/run_config.schema.json",
  "title": "Run Configuration",
  "type": "object",
  "required": ["run_id", "datasets", "models", "metrics"],
  "properties": {
    "run_id": {"type": "string"},
    "datasets": {"type": "array", "items": {"type": "string"}, "minItems": 1},
    "models": {"type": "array", "items": {"type": "string", "enum": ["ollama:llama3.2:2b", "gemini:gemini-2.5"]}, "minItems": 1},
    "metrics": {"type": "array", "items": {"type": "string", "enum": ["exact", "semantic", "consistency", "adherence", "hallucination"]}, "minItems": 1},
    "thresholds": {
      "type": "object",
      "properties": {
        "semantic": {"type": "number", "minimum": 0, "maximum": 1, "default": 0.8}
      }
    },
    "concurrency": {"type": "integer", "minimum": 1, "default": 1}
  }
}
