{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/golden.schema.json",
  "title": "Golden References",
  "type": "object",
  "required": ["dataset_id", "version", "entries"],
  "properties": {
    "dataset_id": {"type": "string"},
    "version": {"type": "string"},
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["conversation_id", "turns"],
        "properties": {
          "conversation_id": {"type": "string"},
          "turns": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["turn_index", "expected"],
              "properties": {
                "turn_index": {"type": "integer", "minimum": 0},
                "expected": {
                  "type": "object",
                  "required": ["variants"],
                  "properties": {
                    "variants": {"type": "array", "minItems": 1, "items": {"type": "string"}}
                  }
                }
              }
            }
          },
          "final_outcome": {
            "type": "object",
            "required": ["decision"],
            "properties": {
              "decision": {"type": "string", "enum": ["ALLOW", "DENY", "PARTIAL"]},
              "refund_amount": {"type": "number"},
              "reason_code": {"type": "string"},
              "next_action": {"type": "string"},
              "policy_flags": {"type": "array", "items": {"type": "string"}}
            }
          },
          "constraints": {"type": "object"}
        }
      }
    }
  }
}
